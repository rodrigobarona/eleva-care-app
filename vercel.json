{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "nodeVersion": "22.x"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/keep-alive",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/refresh-tokens",
      "schedule": "0 0 * * *"
    }
  ]
}
