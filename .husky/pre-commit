#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Add common Node.js paths to PATH for GitHub Desktop and other GUI apps
# Dynamically resolve NVM node bin path
if [ -n "$NVM_DIR" ]; then
  # NVM_DIR is set, use it
  [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
elif [ -s "$HOME/.nvm/nvm.sh" ]; then
  # Try default NVM location
  export NVM_DIR="$HOME/.nvm"
  . "$NVM_DIR/nvm.sh"
fi

# Build PATH with dynamic node resolution
NODE_BIN_PATH=""
if command -v nvm > /dev/null 2>&1 && [ -n "$NVM_DIR" ]; then
  # Get active NVM node version and build path
  NODE_VERSION=$(nvm version 2>/dev/null)
  if [ -n "$NODE_VERSION" ] && [ "$NODE_VERSION" != "none" ]; then
    NODE_BIN_PATH="$NVM_DIR/versions/node/$NODE_VERSION/bin"
  fi
elif [ -n "$NVM_BIN" ]; then
  # Use NVM_BIN if available
  NODE_BIN_PATH="$NVM_BIN"
fi

# Export PATH with all necessary locations
export PATH="/usr/local/bin:/opt/homebrew/bin:${NODE_BIN_PATH:+$NODE_BIN_PATH:}$PATH"

echo "üîç Running pre-commit checks..."

# Run lint-staged for staged files
pnpm lint-staged

# Run tests for modified files
echo "üß™ Running tests for modified files..."
# Use --diff-filter=d to exclude deleted files, and handle filenames with spaces safely
FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(ts|tsx)$' || true)
if [ -n "$FILES" ]; then
  echo "üîç Found changed TypeScript files, running related tests..."
  # Use printf with null delimiter and xargs -0 to safely handle filenames with spaces
  printf '%s\0' $FILES | xargs -0 pnpm exec jest --findRelatedTests --passWithNoTests --
else
  echo "üìù No TypeScript files changed, skipping tests"
fi

echo "‚úÖ Pre-commit checks completed!"
